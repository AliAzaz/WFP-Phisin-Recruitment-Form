<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:scrollViewStyle">@style/BackgroundStyle</item>
        <item name="android:textViewStyle">@style/labels</item>
        <item name="android:editTextStyle">@style/textInput</item>
        <item name="android:editTextPreferenceStyle">@style/textInput</item>
        <item name="android:buttonStyle">@style/buttons</item>
        <item name="android:checkboxStyle">@style/checkbox</item>
        <item name="android:radioButtonStyle">@style/radiobutton</item>
        <!--  Customize your theme here. -->
    </style>

    <style name="AppTheme1" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:scrollViewStyle">@style/BackgroundStyle</item>
        <item name="android:textViewStyle">@style/labels</item>
        <item name="android:editTextStyle">@style/textInput</item>
        <item name="android:buttonStyle">@style/buttons</item>
        <item name="android:checkboxStyle">@style/checkbox</item>
        <item name="android:radioButtonStyle">@style/radiobutton</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextLabel2" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="TextLabel" parent="Widget.Design.TextInputLayout">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>

        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:elevation">1dp</item>

    </style>

    <style name="BackgroundStyle" parent="android:Widget.Material.Light.ScrollView">
        <item name="android:background">@drawable/background_inner</item>
        <item name="android:padding">24dp</item>
    </style>

    <style name="SpinnerItem">
        <item name="android:textAppearance">@style/SpinnerItemText</item>
    </style>

    <style name="SpinnerItemText">
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="ActionBarTheme" parent="android:Widget.Material.Light.ActionBar">
        <item name="android:background">@drawable/background_grad</item>
        <item name="background">@drawable/background_grad</item>
    </style>


    <!-- Form Styles -->
    <style name="labels" parent="android:Widget.Material.Light.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <!--<item name="android:background">@drawable/background_grad</item>-->
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:elevation">1dp</item>


    </style>

    <style name="listItems" parent="android:Widget.Material.Light.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="errors">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:background">#ffd6d6</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ff1e1e</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:visibility">invisible</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="sub" parent="android:Widget.Material.Light.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:background">@color/colorRedsub</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:visibility">visible</item>
        <item name="android:padding">8dp</item>
        <item name="android:textStyle">italic</item>

    </style>

    <style name="textInput" parent="android:Widget.Material.Light.EditText">
        <item name="android:textSize">24sp</item>
        <item name="android:background">#d6d6d6</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColorHint">@color/colorPrimaryAlpha</item>

    </style>

    <style name="spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColor">#ff0000</item>
        <item name="android:background">#d6d6d6</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="spinnerItemStyle">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="spinnerDropDownItemStyle">
        <item name="android:padding">20dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>


    <style name="radiogroup">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">#d6d6d6</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:padding">16dp</item>

    </style>

    <style name="radiobutton" parent="android:Widget.Material.Light.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:drawableRight">@android:drawable/btn_radio</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:background">#d6d6d6</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="buttons" parent="android:Widget.Material.Light.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:radius">2dp</item>
        <item name="android:elevation">5dp</item>
        <item name="android:background">@drawable/background_grad</item>
    </style>

    <style name="checkbox" parent="android:Widget.Material.Light.CompoundButton.CheckBox">
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">24sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:drawableRight">?android:attr/listChoiceIndicatorMultiple</item>
        <item name="android:background">#d6d6d6</item>
        <item name="android:padding">4dp</item>


    </style>

